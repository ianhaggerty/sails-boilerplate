//- This is the default home page. It features a few basic examples of some of
//- the most useful functionality. Override and update as necessary.
//------------------------------------------------------------------------------

extends ./layout.jade

block content
  h2 A server side template
  ul
    li 'views/home.jade'

  .client

  script.
    $(document).ready(function() {
        App.start();
    });

  .icons
    h2 Icon Examples
    +icon-svg('unity', 100, 100) // height & width
    +icon-svg('unity-embrace', 200, 150)
    +icon-svg('academy')

  .sprites
    h2 Sprite Examples

    +sprite('asprite')
    +sprite('wiggly')

  .font-icons
    h2 Font Icons
    +icon-font('unity')
    +icon-font('unity-embrace')
    +icon-font('academy')